@model List<SoyalpCourse.Data.Entities.Department>
@{
    ViewBag.Title = "Departmans";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Departments</h2>
<div>
    <a href="@Url.Action("Add")" class="btn btn-success">
        Add Department
    </a>
</div>

<div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Department Name</th>
                <th>Update</th>
            </tr>
        </thead>
        <tbody> 
            @{ int number = 1;}
            @foreach (var department in Model)
            {
                <tr>
                    <td>@number</td>
                    <td>@department.Name</td>
                    <td>
                        <a href="@Url.Action("Edit", new {id= department.Id})" class="btn btn-sm btn-dark">Edit</a> |
                        <a href="@Url.Action("Delete", new {id=department.Id})" class="btn btn-sm btn-dark">Delete</a>
                    </td>
                </tr>
                { number++; }
            }
        </tbody>
    </table>
</div>

